extends base.pug

block content 
    h3 Change the title of video
    form(method="POST")
        input(name="title" placeholder="Title" value=video.title required type="text" maxlength=80)
        input(name="description" placeholder="Description" value=video.description required type="text" minlength=20)
        input(name="hashtags" placeholder="Hashtags, Use comma for separating" value=video.hashtags.join() required type="text")
        input(type="submit" value="Save")